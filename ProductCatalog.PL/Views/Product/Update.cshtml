@model ProductDto

@{
    ViewBag.Title = "Update Product";
}

<div class="col-lg-8">
    <form class="form-horizontal" asp-controller="Product" asp-action="Update" method="post">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Update @Model.Name</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 alert alert-danger d-none" id="validationSummary" asp-validation-summary="All"></div>
                    <input type="hidden" class="form-control" asp-for="Id">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name">
                            <div class="mt-2">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price">Price</label>
                            <input type="number" class="form-control" asp-for="Price" placeholder="Enter Product Price in EGP">
                            <div class="mt-2">
                                <span asp-validation-for="Price" class="text-danger mt-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Duration">Duration</label>
                            <input type="number" class="form-control" asp-for="Duration" placeholder="Enter Number of Duration in Weeks">
                            <div class="mt-2">
                                <span asp-validation-for="Duration" class="text-danger mt-2"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="StartDate">Start Date</label>
                            <input type="date" class="form-control" asp-for="StartDate" placeholder="Enter Product Start Date">
                            <div class="mt-2">
                                <span asp-validation-for="StartDate" class="text-danger mt-2"></span>
                                <span style="font-size: 14px;" class="text-danger mt-2">@ViewBag.EarlierStartDate</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select class="custom-select form-control-border border-width-2" asp-for="CategoryId" asp-items="(SelectList)ViewBag.Categories">
                            </select>
                            <div class="mt-2">
                                <span asp-validation-for="CategoryId" class="text-danger mt-2"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" id="submitBtn" class="btn btn-info">Save</button>
                <button type="reset" class="btn btn-default float-right">Cancel</button>
            </div>
        </div>
    </form>
</div>

